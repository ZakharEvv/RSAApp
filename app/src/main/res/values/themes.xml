<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RSAProj" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bkg_grey</item>
        <item name="colorPrimaryVariant">@color/bkg_grey</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="android:windowBackground">@color/bkg_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:colorAccent">@color/green</item>
        <item name="android:buttonStyle">@style/Theme.RSAProj.Button.Green</item>

        <item name="android:textColor">@color/text_primary</item>

    </style>

    <style name="Theme.RSAProj.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Theme.RSAProj.Title</item>
    </style>

    <style name="Theme.RSAProj.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SegmentedButtonTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.RSAProj.SegmentedControl" parent="Theme.RSAProj">
        <item name="customShadowColor">@color/transparent</item>
        <item name="customDividerColor">@color/transparent</item>
        <item name="android:backgroundTint">@color/bkg_grey_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.RSAProj.SegmentedControlButton" parent="Theme.RSAProj">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.RSAProj.EditTextButton" parent="Theme.RSAProj">
        <item name="android:background">@drawable/button_edit_text</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:foreground">@drawable/cardview_clickable_foreground</item>
    </style>

    <style name="Theme.RSAProj.Button.Green" parent="Theme.RSAProj.CustomButtonColored">
        <item name="android:background">@drawable/button_green</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="Theme.RSAProj.CustomButtonColored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>